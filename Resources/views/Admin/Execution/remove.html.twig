{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_mailing.execution.header.remove'|trans({'%name%': execution.name})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ admin_resource_btn(campaign, 'show', {'label': 'ekyna_core.button.back'}) }}
{{ admin_resource_btn(execution, 'new') }}
{% endblock %}

{% block main %}
<form action="{{ path('ekyna_mailing_execution_admin_remove', {'campaignId': campaign.id, 'executionId': execution.id}) }}" method="post" class="form-horizontal">
    <div class="form-body">
	    {{ bootstrap_set_style('horizontal') }}
        {{ bootstrap_set_col_size('md') }}
		{{ form_widget(form) }}
    </div>
    {{ ui_form_footer(form) }}
</form>
{% endblock %}